<div class="main_container">
    <h2>スケジュール一覧</h2>

    <% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
    <% end %>

    <% if flash[:alert] %>
    <p class="alert"><%= flash[:alert] %></p>
    <% end %>

    <table class="index_table">
        <thead>
            <tr>
                <th>ID</th>
                <th>タイトル</th>
                <th>開始日</th>
                <th>終了日</th>
                <th>終日</th>
                <th>スケジュール更新日時</th>
                <th>確認</th>
                <th>編集</th>
                <th>削除</th>
            </tr>
        </thead>
        <% @posts.each do |post| %>
        <tbody>
            <tr>
                <td><%= post.id %></td>
                <td><%= post.title %></td>
                <td><%= post.start_date.strftime("%Y年%m月%d日") %></td>
                <td><%= post.end_date.strftime("%Y年%m月%d日") %></td>
                <td><%if post.is_all_day %>
                    <%="○"%>
                    <%end%>
                </td>
                <td><%= l post.updated_at %></td>
                <td><%= link_to "確認", post %></td>
                <td><%= link_to "編集", [:edit,post] %></td>
                <td><%= link_to "削除", post, data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' } %></td>
            </tr>
        </tbody>
        <% end %>

    </table>

    <a><%= link_to('スケジュール新規登録','/posts/new')%></a>
    
</div>